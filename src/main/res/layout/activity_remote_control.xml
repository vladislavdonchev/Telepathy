<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <SurfaceView
        android:id="@+id/main_surface_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/main_loading_view"
        android:layout_width="wrap_content"
        android:layout_height="256dp"
        android:layout_centerInParent="true"
        android:scaleType="center"
        android:src="@drawable/ic_logo"/>

    <ImageButton
        android:id="@+id/arrow_show_hide_buttons"
        android:layout_width="32dp"
        android:layout_height="44dp"
        android:layout_marginTop="150dp"
        android:padding="10dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/arrow"
        android:visibility="invisible"
        android:textSize="20dp" />

    <LinearLayout
        android:id="@+id/buttons_container"
        android:layout_width="36dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:visibility="gone"
        android:background="@android:color/transparent"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/lock_unlock_button"
            android:layout_width="36dp"
            android:layout_height="48dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/lockunlock" />

        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="36dp"
            android:layout_height="48dp"
            android:layout_marginBottom="1dp"
            android:background="@drawable/back" />

        <ImageButton
            android:id="@+id/home_button"
            android:layout_width="36dp"
            android:layout_height="48dp"
            android:layout_marginBottom="1dp"
            android:background="@drawable/home" />

        <ImageButton
            android:id="@+id/recent_apps_button"
            android:layout_width="36dp"
            android:layout_height="48dp"
            android:background="@drawable/recentapps" />

    </LinearLayout>
</RelativeLayout>
